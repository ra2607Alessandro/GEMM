<div class="min-h-screen bg-gray-50" data-controller="search-updates" data-search-id="<%= @search.id %>">
  <%= turbo_stream_from "search_#{@search.id}" %>
   <div class="max-w-6xl mx-auto px-4 py-8">
     <!-- Header -->
     <div class="mb-6">
      <%= link_to "← Back to Search History", searches_path, class: "text-blue-600 hover:text-blue-800 mb-4 inline-block" %>

      <div class="bg-white rounded-lg shadow p-6">
        <div class="flex items-start justify-between">
          <div class="flex-1">
            <h1 class="text-2xl font-bold text-gray-900 mb-2">
              <%= @search.query %>
            </h1>

            <% if @search.goal.present? %>
              <p class="text-gray-600 mb-2">
                <span class="font-medium">Goal:</span> <%= @search.goal %>
              </p>
            <% end %>

            <% if @search.rules.present? %>
              <p class="text-gray-600 mb-4">
                <span class="font-medium">Rules:</span> <%= @search.rules %>
              </p>
            <% end %>

            <div class="flex items-center space-x-4 text-sm text-gray-500">
              <span>Started <%= time_ago_in_words(@search.created_at) %> ago</span>
              <span class="<%= status_badge_class(@search.status) %>">
                <%= @search.status.titleize %>
              </span>
            </div>
          </div>

          <div class="text-right">
            <div class="text-sm text-gray-500">Search ID</div>
            <div class="font-mono text-xs text-gray-400"><%= @search.id %></div>
          </div>
        </div>
      </div>
    </div>

        <!-- Status Updates (Turbo Frame) -->
    <%= turbo_frame_tag "search_status" do %>
      <%= render 'status', search: @search %>
    <% end %>

    <!-- AI Response Section -->
    <%= turbo_frame_tag "ai_response" do %>
      <%= render 'ai_response', search: @search %>
    <% end %>

    <!-- Search Results -->
    <%= turbo_frame_tag "search_results" do %>
      <%= render 'results', search_results: @search_results, search: @search %>
    <% end %>

    <!-- Footer Actions -->
    <div class="mt-8 text-center">
      <div class="space-x-4">
        <%= link_to "Start New Search", searches_path, class: "bg-blue-600 hover:bg-blue-700 text-white font-semibold py-2 px-6 rounded-lg transition duration-200" %>
        <%= link_to "Back to History", searches_path, class: "bg-gray-200 hover:bg-gray-300 text-gray-800 font-semibold py-2 px-6 rounded-lg transition duration-200" %>
      </div>
    </div>
  </div>
</div>

<script>
function toggleContent(button) {
  const resultId = button.closest('[data-result-id]').dataset.resultId;
  const fullContent = document.getElementById(`full-content-${resultId}`);

  if (fullContent.classList.contains('hidden')) {
    fullContent.classList.remove('hidden');
    button.textContent = 'Show Less';
  } else {
    fullContent.classList.add('hidden');
    button.textContent = 'Show More';
  }
}
</script>


