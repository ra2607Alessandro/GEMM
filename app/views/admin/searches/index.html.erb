<div class="container mx-auto px-4 py-8">
  <h1 class="text-3xl font-bold mb-6">Admin Dashboard: Searches</h1>

  <!-- Job Status -->
  <div class="mb-8 p-4 border rounded-lg bg-gray-50">
    <h2 class="text-xl font-semibold mb-4">Job Queue Status (SolidQueue)</h2>
    <div class="grid grid-cols-2 md:grid-cols-4 gap-4 text-center">
      <div>
        <p class="text-gray-600">Total Jobs</p>
        <p class="text-2xl font-bold"><%= @job_counts[:total] %></p>
      </div>
      <div>
        <p class="text-gray-600">Pending</p>
        <p class="text-2xl font-bold text-blue-600"><%= @job_counts[:pending] %></p>
      </div>
      <div>
        <p class="text-gray-600">In Progress</p>
        <p class="text-2xl font-bold text-yellow-600"><%= @job_counts[:in_progress] %></p>
      </div>
      <div>
        <p class="text-gray-600">Failed</p>
        <p class="text-2xl font-bold text-red-600"><%= @job_counts[:failed] %></p>
      </div>
    </div>
  </div>


  <!-- Searches Table -->
  <h2 class="text-xl font-semibold mb-4">Recent Searches</h2>
  <div class="overflow-x-auto">
    <table class="min-w-full bg-white border rounded-lg">
      <thead class="bg-gray-100">
        <tr>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">ID</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Query</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Status</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Documents</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Created At</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Updated At</th>
        </tr>
      </thead>
      <tbody class="divide-y divide-gray-200">
        <% @searches.each do |search| %>
          <tr>
            <td class="px-6 py-4 whitespace-nowrap"><%= search.id %></td>
            <td class="px-6 py-4 whitespace-nowrap"><%= truncate(search.query, length: 50) %></td>
            <td class="px-6 py-4 whitespace-nowrap">
              <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full <%= status_badge_class(search.status) %>">
                <%= search.status.titleize %>
              </span>
            </td>
            <td class="px-6 py-4 whitespace-nowrap"><%= search.documents.count %></td>
            <td class="px-6 py-4 whitespace-nowrap"><%= time_ago_in_words(search.created_at) %> ago</td>
            <td class="px-6 py-4 whitespace-nowrap"><%= time_ago_in_words(search.updated_at) %> ago</td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>